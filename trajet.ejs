

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List in Table Example</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  
    <div class="container">
        <h2>Add new user</h2>
        <form  action="/trajet" method="post">
          <div class="mb-3">
            <label for="trajet" class="form-label">Nom</label>
            <input type="text" class="form-control" id="trajet" name="trajet" placeholder="trajet">
       </div>
          <div class="mb-3">
            <label for="depart" class="form-label">Déaprt</label>
            <input type="date" class="form-control" id="depart" name="depart">
          </div>
          <div class="mb-3">
            <label for="arrivee" class="form-label">Arrivée</label>
            <input type="date" class="form-control" id="arrivee" name="arrivee">
          </div>
        
          <button type="submit" class="btn btn-primary">Ajouter un nouveau utilisateur</button>
        </form>
      </div>

<div class="container">
  <h2>Liste des users </h2>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Trajet</th>
        <th>Départ</th>
        <th>Arivée</th>
      </tr>
    </thead>
    <tbody>
      <!-- Example list items -->

      <% trajets.forEach (trajet =>{ %> 

       
        <tr>
            <td><%= trajet._id %></td>
            <td><%= trajet.trajet %></td>
            <td><%= trajet.dateDepart %></td>
            <td><%= trajet.dateArrivee %></td>
            <td>
                <div class="row">
                    <div class="col">
                      <a href="/users/delete/<%= trajet._id %>" class="btn btn-danger">Delete</a>
                    </div>
                  </div>

            </td>
          </tr>
 
 
    <%   } )  %>   
     
     
      <!-- End of example list items -->
    </tbody>
  </table>
</div>

<!-- Bootstrap JS (Optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
