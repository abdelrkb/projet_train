<script>

  const options = document.querySelectorAll("input[type='checkbox']")  // la liste de inputs checkbox
  const total = document.getElementById('total') // la balise de  ici attention 
  options.forEach(option=>{
    option.addEventListener('change',()=>{
    
    if (option.checked) {
      total.innerHTML = Number(total.innerHTML) + Number(option.value)
   }
   else
   {
    total.innerHTML = Number(total.innerHTML) - Number(option.value)

   }
    }

    )
   

  })
  
</script>

